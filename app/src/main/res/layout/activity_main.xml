<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/night"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/text_visor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="50sp"
        android:textColor="@color/white"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toTopOf="@id/botao_del"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/botao_ponto"
        android:layout_width="100dp"
        android:layout_height="110dp"
        android:textColorHint="@color/white"
        android:backgroundTint="@color/night"
        android:gravity="center"
        android:text="."
        android:textSize="32sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/botao_zero"
        android:layout_width="100dp"
        android:layout_height="110dp"
        android:backgroundTint="@color/night"
        android:gravity="center"
        android:text="0"
        android:textSize="32sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/botao_ponto" />

    <Button
        android:id="@+id/botao_igual"
        android:layout_width="100dp"
        android:layout_height="110dp"
        android:backgroundTint="@color/night"
        android:gravity="center"
        android:text="="
        android:textSize="32sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/botao_zero" />

    <Button
        android:id="@+id/botao_um"
        android:layout_width="100dp"
        android:layout_height="110dp"
        android:backgroundTint="@color/night"
        android:gravity="center"
        android:text="1"
        android:textSize="32sp"
        app:layout_constraintBottom_toTopOf="@id/botao_ponto"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/botao_dois"
        android:layout_width="100dp"
        android:layout_height="110dp"
        android:backgroundTint="@color/night"
        android:gravity="center"
        android:text="2"
        android:textSize="32sp"
        app:layout_constraintBottom_toTopOf="@id/botao_zero"
        app:layout_constraintStart_toEndOf="@id/botao_um" />

    <Button
        android:id="@+id/botao_tres"
        android:layout_width="100dp"
        android:layout_height="110dp"
        android:backgroundTint="@color/night"
        android:gravity="center"
        android:text="3"
        android:textSize="32sp"
        app:layout_constraintBottom_toTopOf="@id/botao_igual"
        app:layout_constraintStart_toEndOf="@id/botao_dois" />

    <Button
        android:id="@+id/botao_quatro"
        android:layout_width="100dp"
        android:layout_height="110dp"
        android:backgroundTint="@color/night"
        android:gravity="center"
        android:text="4"
        android:textSize="32sp"
        app:layout_constraintBottom_toTopOf="@id/botao_um"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/botao_cinco"
        android:layout_width="100dp"
        android:layout_height="110dp"
        android:backgroundTint="@color/night"
        android:gravity="center"
        android:text="5"
        android:textSize="32sp"
        app:layout_constraintBottom_toTopOf="@id/botao_dois"
        app:layout_constraintStart_toEndOf="@id/botao_quatro" />

    <Button
        android:id="@+id/botao_seis"
        android:layout_width="100dp"
        android:layout_height="110dp"
        android:backgroundTint="@color/night"
        android:gravity="center"
        android:text="6"
        android:textSize="32sp"
        app:layout_constraintBottom_toTopOf="@id/botao_tres"
        app:layout_constraintStart_toEndOf="@id/botao_cinco" />

    <Button
        android:id="@+id/botao_sete"
        android:layout_width="100dp"
        android:layout_height="110dp"
        android:backgroundTint="@color/night"
        android:gravity="center"
        android:text="7"
        android:textSize="32sp"
        app:layout_constraintBottom_toTopOf="@id/botao_quatro"
        app:layout_constraintStart_toStartOf="@id/botao_quatro" />

    <Button
        android:id="@+id/botao_oito"
        android:layout_width="100dp"
        android:layout_height="110dp"
        android:backgroundTint="@color/night"
        android:gravity="center"
        android:text="8"
        android:textSize="32sp"
        app:layout_constraintBottom_toTopOf="@id/botao_cinco"
        app:layout_constraintStart_toEndOf="@id/botao_sete" />

    <Button
        android:id="@+id/botao_nove"
        android:layout_width="100dp"
        android:layout_height="110dp"
        android:backgroundTint="@color/night"
        android:gravity="center"
        android:text="9"
        android:textSize="32sp"
        app:layout_constraintBottom_toTopOf="@id/botao_seis"
        app:layout_constraintStart_toEndOf="@id/botao_oito" />

    <Button
        android:id="@+id/botao_soma"
        android:layout_width="100dp"
        android:layout_height="88dp"
        android:backgroundTint="@color/operacoes"
        android:gravity="center"
        android:text="+"
        android:textSize="32sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/botao_subtracao"
        android:layout_width="100dp"
        android:layout_height="88dp"
        android:backgroundTint="@color/operacoes"
        android:gravity="center"
        android:text="-"
        android:textSize="32sp"
        app:layout_constraintBottom_toTopOf="@id/botao_soma"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/botao_multiplicacao"
        android:layout_width="100dp"
        android:layout_height="88dp"
        android:backgroundTint="@color/operacoes"
        android:gravity="center"
        android:text="x"
        android:textAllCaps="false"
        android:textSize="32sp"
        app:layout_constraintBottom_toTopOf="@id/botao_subtracao"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/botao_divisao"
        android:layout_width="100dp"
        android:layout_height="88dp"
        android:backgroundTint="@color/operacoes"
        android:gravity="center"
        android:text="รท"
        android:textAllCaps="false"
        android:textSize="32sp"
        app:layout_constraintBottom_toTopOf="@id/botao_multiplicacao"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/botao_del"
        android:layout_width="100dp"
        android:layout_height="88dp"
        android:backgroundTint="@color/operacoes"
        android:gravity="center"
        android:text="DEL"
        android:textAllCaps="false"
        android:textSize="32sp"
        app:layout_constraintBottom_toTopOf="@id/botao_divisao"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>